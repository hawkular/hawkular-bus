<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://activemq.apache.org/schema/core http://activemq.apache.org/schema/core/activemq-core.xsd">

  <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer" />

  <broker xmlns="http://activemq.apache.org/schema/core" persistent="false" useJmx="false" brokerName="tcp-testbroker">
    <transportConnectors>
      <transportConnector name="openwire" uri="tcp://localhost:${tcp-testbroker.bind.port}" />
    </transportConnectors>

    <plugins>
      <simpleAuthenticationPlugin>
        <users>
          <authenticationUser username="user1" password="user1pw" groups="users" />
        </users>
      </simpleAuthenticationPlugin>
    </plugins>
  </broker>
</beans>
