<module xmlns="urn:jboss:module:1.0" name="${moduleName}">

  <resources>
    <!--  Resources not replicated in the activemg rar, which is declared and exported below -->
    <resource-root path="${project.build.finalName}.jar" />
    <resource-root path="activemq-jaas-${version.org.apache.activemq}.jar" />
    <resource-root path="activemq-web-${version.org.apache.activemq}.jar" />
    <resource-root path="jetty-continuation-7.6.9.v20130131.jar" />
    <resource-root path="jetty-http-7.6.9.v20130131.jar" />
    <resource-root path="jetty-io-7.6.9.v20130131.jar" />
    <resource-root path="jetty-util-7.6.9.v20130131.jar" />
    <resource-root path="jetty-websocket-7.6.9.v20130131.jar" />
    <resource-root path="hawkular-bus-broker-${project.version}.jar" />
    <resource-root path="rome-1.0.jar" />
    <resource-root path="spring-web-3.2.8.RELEASE.jar" />
    <resource-root path="spring-webmvc-3.2.8.RELEASE.jar" />
    <resource-root path="xmlpull-1.1.3.1.jar" />
    <resource-root path="xpp3-1.1.4c.jar" />
    <resource-root path="xpp3_min-1.1.4c.jar" />
    <resource-root path="xstream-1.4.7.jar" />
    <resource-root path="config" />
    <resource-root path="deployments" />
  </resources>

  <dependencies>
    <!-- we require the rar deps for activemq -->
    <module name="org.apache.activemq.ra" export="true" />

    <!-- modules required by any subsystem -->
    <module name="javax.api" />
    <module name="org.jboss.as.controller" />
    <module name="org.jboss.as.server" />
    <module name="org.jboss.logging" />
    <module name="org.jboss.modules" />
    <module name="org.jboss.msc" />
    <module name="org.jboss.staxmapper" />
    <module name="org.jboss.vfs" />

    <!-- other dependencies we need -->
    <module name="gnu.getopt" />
    <module name="javax.jms.api" />
    <module name="javax.management.j2ee.api" />
    <module name="javax.servlet.api" />
    <module name="javax.transaction.api" />
    <module name="org.apache.commons.logging" />
    <module name="org.apache.commons.pool" />
    <module name="org.apache.log4j" />
    <module name="org.jboss.logmanager" services="import" />
    <module name="org.jboss.common-core" />
    <module name="org.jboss.as.network" />
    <module name="org.jboss.as.jmx" />
    <module name="org.jboss.as.web" />
    <module name="org.jdom" />
    <module name="org.slf4j" />
  </dependencies>
</module>
